<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/device_mac_addr"
            android:layout_width="160dp"
            android:layout_column="1"
            android:padding="7dip"
            android:text=""
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/device_rssi_to_phone"
            android:layout_width="60dp"
            android:layout_column="2"
            android:padding="7dip"
            android:text=""
            android:textAlignment="textStart" />

        <TableLayout >
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Defined name:" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/device_defined_name"
                    android:layout_width="wrap_content"
                    android:textColor="#00a7f5"
                    android:text="" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Defined type:" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/device_defined_type"
                    android:layout_width="wrap_content"
                    android:textColor="#00a7f5"
                    android:text="" />
            </TableRow>
        </TableLayout>


    </TableRow>
</TableLayout>